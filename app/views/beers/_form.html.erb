<%= simple_form_for(@beer) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :date, label: "Release Date" %>
    <%= f.collection_radio_buttons(:brewery_ids, @breweries, :id, :name) %>
    <%= f.collection_radio_buttons(:beertype_ids, @beertypes, :id, :name) %>
    <%= f.collection_radio_buttons(:colour_ids, @colours, :id, :name) %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
